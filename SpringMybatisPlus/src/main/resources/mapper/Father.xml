<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springMybatisPlus.mapper.FatherMapper">

    <resultMap id="FatherResult" type="com.springMybatisPlus.domain.Father">
        <result property="id" column="id"/>
        <result property="father" column="father"/>

        <collection property="childList" ofType="com.springMybatisPlus.domain.Child">
            <result property="id" column="id"/>
            <result property="fatherId" column="father_id"/>
            <result property="name" column="name"/>
        </collection>

    </resultMap>

    <select id="selectFatherDetails" resultMap="FatherResult">
        SELECT * FROM t_father LEFT JOIN t_child ON t_father.id = t_child.father_id
    </select>

</mapper>
